rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Articles: anyone can read, authenticated users can create/update
    match /articles/{articleId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Likes: anyone can read, authenticated users manage their own
    match /likes/{articleId}/users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Comments: anyone can read, authenticated users can create, owners can edit/delete
    match /comments/{articleId}/messages/{commentId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
